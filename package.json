{
  "name": "fastify-file-upload-service",
  "version": "1.0.0",
  "description": "backend service for uploading files",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "dev": "nodemon --config ./util/nodemon.json",
    "build": "rm -rf ./dist/ && tsc",
    "serve:dev": "npm run build && pm2-runtime start ecosystem.dev.config.json",
    "serve:prod": "npm run build && pm2-runtime start ecosystem.prod.config.json",
    "docker-build:dev": "docker build . -t bitdigo/fastify-file-upload-service",
    "docker-build:prod": "docker build -f Dockerfile.prod . . -t bitdigo/fastify-file-upload-service",
    "docker-run:dev": "docker run --env-file ./.env -p 30011:30011 -d --name fastify-file-upload-service -it bitdigo/fastify-file-upload-service",
    "docker-dev": "npm run docker-build:dev && npm run docker-run:dev",
    "docker-run:prod": "docker run --env-file ./.env -p 30010:30010 -d --name fastify-file-upload-service -it bitdigo/fastify-file-upload-service",
    "docker-prod": "npm run docker-build:prod && npm run docker-run:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "bitdigo",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.30",
    "@types/pg": "^8.6.5",
    "@types/sharp": "^0.30.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "pm2": "^5.2.0",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.160.0",
    "@fastify/auth": "^2.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/multipart": "^6.0.0",
    "aws-sdk": "^2.1152.0",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.0",
    "fastify": "^3.29.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "sharp": "^0.30.6",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  }
}